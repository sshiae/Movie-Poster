<resources>
    <!-- Base application theme. -->
    <style name="Theme.Afisha" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/brand_color</item>
        <item name="colorOnSurfaceVariant">@color/brand_color</item>
        <item name="colorPrimaryVariant">@color/background_color</item>
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Afisha.SplashScreen" parent="Theme.SplashScreen.IconBackground">
        <item name="postSplashScreenTheme">@style/Theme.Afisha</item>
        <item name="windowSplashScreenBackground">@color/background_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
    </style>
</resources>